<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="by_diamond_view_form" model="ir.ui.view">
        <field name="name">by.diamond.view.form</field>
        <field name="model">by.diamond</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="by_diamond_view_tree" model="ir.ui.view">
        <field name="name">by.diamond.view.tree</field>
        <field name="model">by.diamond</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="create_uid" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="by_diamond_action" model="ir.actions.act_window">
        <field name="name">By / Via</field>
        <field name="res_model">by.diamond</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
