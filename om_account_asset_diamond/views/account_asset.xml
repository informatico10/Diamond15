<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_account_asset_asset_form_inherit" model="ir.ui.view">
		<field name="name">account.asset.asset.form.inherit</field>
		<field name="model">account.asset.asset</field>
		<field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='brand']" position="replace">
				<field name="area" />
			</xpath>
			<xpath expr="//field[@name='plaque']" position="replace">
				<field name="encargado" />
			</xpath>
		</field>
	</record>
</odoo>