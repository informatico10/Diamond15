    <record id="mrp_production_mano_obra_form_view" model="ir.ui.view">
            <field name="name">mrp.production.mano.obra.form.view</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='miscellaneous']" position="before">
                    <page string="Mano De Obra" name="mano_obra">
                            <field name="workforce_ids"  attrs="{'readonly': ['|', ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}" options="{'delete': [('state', '=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="name" string="Mano De Obra"/>
                                    <field name="empleado_id" string="Empleado"/>
                                    <field name="horas" string="Horas"/>
                                    <field name="costo_unitario" string="Costo Unitario"/>
                                    <field name="costo_total" string="Costo Total"/>
                                </tree>
                            </field>
                    </page>
               </xpath>
            </field>
    </record>

