<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_account_notify" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <field name="check_fields" invisible="True" />
                <field name="type_purchase" invisible="True" />
                <page name="invoice_supplier" string="Factura de Proveedor" attrs="{'invisible': [('purchase_id', '=', False)]}">
                    <group>
                        <group>
                            <field name="invoice_purchase" />
                            <field name="field_pdf" attrs="{'invisible': [('invoice_purchase', '!=', '0')]}" />
                            <field name="field_xml" attrs="{'invisible': [('invoice_purchase', '!=', '0')]}" />
                            <field name="field_cdr" attrs="{'invisible': [('invoice_purchase', '!=', '0')]}" />
                        </group>
                        <group>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
